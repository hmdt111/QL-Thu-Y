@model IEnumerable<Front_end.Models.ServiceViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>DANH SÁCH DỊCH VỤ</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm dịch vụ mới</a>
</p>
<div class="table-responsive">


    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceName)
                    </td>
                    <td>
                        @string.Format("{0:#,0}", item.UnitPrice) VNĐ
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.ServiceId">Sửa</a>
                        <a asp-action="Delete" class="btn btn-success" asp-route-id="@item.ServiceId">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
